{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // src フォルダを指すように修正
    }
  },
  "include": [
    "src/**/*.ts" // src フォルダ内のすべての TypeScript ファイルを対象
  ],
  "exclude": ["node_modules", "dist"]
}
